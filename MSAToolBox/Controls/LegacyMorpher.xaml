<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:Legacy="clr-namespace:MSAToolBox.Controls.Legacy" x:Class="MSAToolBox.Controls.LegacyMorpher" 
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="1200">
    <Grid>
        <TabControl Margin="0,0,0,0">
            <TabItem Header="Creature">
                <Legacy:CreaturePanel x:Name="creaturePanel"/>
            </TabItem>
            <TabItem Header="Item">
                <Legacy:ItemPanel x:Name="itemPanel"/>
            </TabItem>
            <TabItem Header="Skill">
                <Legacy:SkillLinePanel Margin="0" x:Name="skillPanel"/>
            </TabItem>
            <TabItem Header="Spell">
                <Legacy:SpellPanel x:Name="spellPanel"/>
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>
