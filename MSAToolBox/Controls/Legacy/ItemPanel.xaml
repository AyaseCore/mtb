                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </ListBox.RenderTransform>
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock>
                        <TextBlock.Text>
                            <MultiBinding StringFormat="{}{0} - {1} {2}">
                                <Binding Path="Entry"/>
                                <Binding Path="Name"/>
                                <Binding Path="InUse" Converter="{StaticResource ItemInUseConverter}"/>
                            </MultiBinding>
                        </TextBlock.Text>
                        <TextBlock.Foreground>
                            <Binding Path="Quality" Converter="{StaticResource QualityColorConverter}"/>
                        </TextBlock.Foreground>
                    </TextBlock>
                </DataTemplate>
            </ListBox.ItemTemplate>
            <ListBox.ContextMenu>
                <ContextMenu>
                    <MenuItem Name="itemInUse" Header="IN USE"/>
                    <MenuItem Name="itemCopy" Header="COPY" Click="itemCopy_Click" />
                    <MenuItem Name="itemDelete" Header="DELETE" Click="itemDelete_Click" />
