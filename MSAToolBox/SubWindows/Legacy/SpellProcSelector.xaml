        <CheckBox x:Name="p4" Content="Melee Ability Hit" HorizontalAlignment="Left" Margin="10,56,0,0" VerticalAlignment="Top" Click="p_Click"/>
        <CheckBox x:Name="p5" Content="Taken Melee Ability Hit" HorizontalAlignment="Left" Margin="10,56,0,0" VerticalAlignment="Top" Grid.Column="1" Click="p_Click"/>
        <CheckBox x:Name="p6" Content="Ranged Normal Hit" HorizontalAlignment="Left" Margin="10,79,0,0" VerticalAlignment="Top" Click="p_Click"/>
        <CheckBox x:Name="p7" Content="Taken Ranged Normal Hit" HorizontalAlignment="Left" Margin="10,79,0,0" VerticalAlignment="Top" Grid.Column="1" Click="p_Click"/>
        <CheckBox x:Name="p8" Content="Ranged Ability Hit" HorizontalAlignment="Left" Margin="10,102,0,0" VerticalAlignment="Top" Click="p_Click"/>
        <CheckBox x:Name="p9" Content="Taken Ranged Ability Hit" HorizontalAlignment="Left" Margin="10,102,0,0" VerticalAlignment="Top" Grid.Column="1" Click="p_Click"/>
        <CheckBox x:Name="p10" Content="Positive Non-class Ability Hit" HorizontalAlignment="Left" Margin="10,125,0,0" VerticalAlignment="Top" Click="p_Click"/>
        <CheckBox x:Name="p11" Content="Taken Positive Non-class Ability Hit" HorizontalAlignment="Left" Margin="10,125,0,0" VerticalAlignment="Top" Grid.Column="1" Click="p_Click"/>
        <CheckBox x:Name="p12" Content="Negative Non-class Ability Hit" HorizontalAlignment="Left" Margin="10,148,0,0" VerticalAlignment="Top" Click="p_Click"/>
        <CheckBox x:Name="p13" Content="Taken Negative Non-class Ability Hit" HorizontalAlignment="Left" Margin="10,148,0,0" VerticalAlignment="Top" Grid.Column="1" Click="p_Click"/>
        <CheckBox x:Name="p14" Content="Positive Spell Ability Hit" HorizontalAlignment="Left" Margin="10,171,0,0" VerticalAlignment="Top" Click="p_Click"/>
        <CheckBox x:Name="p15" Content="Taken Positive Spell Ability Hit" HorizontalAlignment="Left" Margin="10,171,0,0" VerticalAlignment="Top" Grid.Column="1" Click="p_Click"/>
        <CheckBox x:Name="p16" Content="Negative Spell Ability Hit" HorizontalAlignment="Left" Margin="10,194,0,0" VerticalAlignment="Top" Click="p_Click"/>
        <CheckBox x:Name="p17" Content="Taken Negative Spell Ability Hit" HorizontalAlignment="Left" Margin="10,194,0,0" VerticalAlignment="Top" Grid.Column="1" Click="p_Click"/>
        <CheckBox x:Name="p18" Content="Done Periodic" HorizontalAlignment="Left" Margin="10,217,0,0" VerticalAlignment="Top" Click="p_Click"/>
        <CheckBox x:Name="p19" Content="Taken Periodic" HorizontalAlignment="Left" Margin="10,217,0,0" VerticalAlignment="Top" Grid.Column="1" Click="p_Click"/>
        <CheckBox x:Name="p20" Content="Taken Damge" HorizontalAlignment="Left" Margin="10,240,0,0" VerticalAlignment="Top" Click="p_Click"/>
        <CheckBox x:Name="p21" Content="On Trap Activation" HorizontalAlignment="Left" Margin="10,240,0,0" VerticalAlignment="Top" Grid.Column="1" Click="p_Click"/>
